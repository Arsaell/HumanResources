<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Baby and Children</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "WeaponsAlwaysBasic"]/weaponTags</xpath>
			<value>
				<li>Toy</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Babies and Children</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "WeaponsAlwaysBasic"]/thingSetMakerTags</xpath>
			<value>
				<li>Toy</li>
			</value>
		</match>
	</Operation>

</Patch>