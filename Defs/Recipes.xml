<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>LearnTech</defName>
    <label>Study technologies</label>
    <description>Study to acquire knowledge about a new technology.</description>
    <jobString>Studying a new technology.</jobString>
    <workAmount>450</workAmount>
    <workSpeedStat>ResearchSpeed</workSpeedStat>
    <requiredGiverWorkType>HR_Learn</requiredGiverWorkType>
    <!--<workSkill>Intellectual</workSkill>-->
    <efficiencyStat>WorkTableEfficiencyFactor</efficiencyStat>
    <recipeUsers>
      <li>StudyDesk</li>
    </recipeUsers>
    <fixedIngredientFilter>
      <categories>
        <li>Knowledge</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>DocumentTech</defName>
    <label>Document technologies</label>
    <description>Consolidate knowledge into a technical book.</description>
    <jobString>Documenting a technology.</jobString>
    <workSpeedStat>ResearchSpeed</workSpeedStat>
    <!--<requiredGiverWorkType>HR_Learn</requiredGiverWorkType>-->
    <requiredGiverWorkType>Research</requiredGiverWorkType>
    <workSkill>Intellectual</workSkill>
    <efficiencyStat>WorkTableEfficiencyFactor</efficiencyStat>
    <recipeUsers>
      <li>StudyDesk</li>
    </recipeUsers>
    <unfinishedThingDef>UnfinishedTechBook</unfinishedThingDef>
    <fixedIngredientFilter>
      <categories>
        <li>Knowledge</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <TechBook>1</TechBook>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>ResearchTech</defName>
    <label>Research technologies</label>
    <description>Expand the frontier of knowledge by researching new technologies.</description>
    <jobString>Researching.</jobString>
    <workSpeedStat>ResearchSpeed</workSpeedStat>
    <!--<requiredGiverWorkType>HR_Learn</requiredGiverWorkType>-->
    <requiredGiverWorkType>Research</requiredGiverWorkType>
    <workSkill>Intellectual</workSkill>
    <efficiencyStat>WorkTableEfficiencyFactor</efficiencyStat>
    <recipeUsers>
      <li>StudyDesk</li>
    </recipeUsers>
    <fixedIngredientFilter>
      <categories>
        <li>Knowledge</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <TechBook>1</TechBook>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>TrainWeaponShooting</defName>
    <label>learn to shoot a weapon</label>
    <description>Train with a ranged weapon to acquire proficiency.</description>
    <jobString>Practicing with a weapon.</jobString>
    <workAmount>10000</workAmount>
    <requiredGiverWorkType>HR_Learn</requiredGiverWorkType>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Shot_Revolver</soundWorking>
    <workSkill>Shooting</workSkill>
    <recipeUsers>
      <li>Target</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>WeaponsRanged</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>WeaponsRanged</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>WeaponsRanged</li>
      </categories>
    </defaultIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>TrainWeaponMelee</defName>
    <label>learn to wield a weapon</label>
    <description>Train with a melee weapon to acquire proficiency.</description>
    <jobString>Training with a weapon.</jobString>
    <workAmount>10000</workAmount>
    <requiredGiverWorkType>HR_Learn</requiredGiverWorkType>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <workSkill>Melee</workSkill>
    <recipeUsers>
      <li>MrDummy</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>WeaponsMelee</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>WeaponsMelee</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>WeaponsMelee</li>
      </categories>
    </defaultIngredientFilter>
  </RecipeDef>

  <!--From ItchyFlea's Practise Target-->
  <RecipeDef>
    <defName>PracticeShooting</defName>
    <label>practice shooting</label>
    <description>Shoots at a target to train shooting accuracy.</description>
    <jobString>Training.</jobString>
    <workAmount>350</workAmount>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Shot_Revolver</soundWorking>
    <workSkill>Shooting</workSkill>
    <recipeUsers>
      <li>Target</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef>
    <defName>PracticeMelee</defName>
    <label>practice melee</label>
    <description>Trains close quarters combat against a straw dummy.</description>
    <jobString>Training.</jobString>
    <workAmount>700</workAmount>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <workSkill>Melee</workSkill>
    <recipeUsers>
      <li>MrDummy</li>
    </recipeUsers>
  </RecipeDef>
</Defs>