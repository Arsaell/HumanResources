    <uiIconPath>Things/Building/Target_MenuIcon</uiIconPath>
    <graphicData>
      <texPath>Things/Building/Target</texPath>
      <shaderType>CutoutComplex</shaderType>
      <graphicClass>Graphic_Multi</graphicClass>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <description>A target for your sharpshooters to hone their skills with.</description>
    <size>(1,1)</size>
    <useHitPoints>False</useHitPoints>
    <!--<costList>
			<Steel>35</Steel>
		</costList>-->
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <statBases>
      <WorkToBuild>250</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <passability>PassThroughOnly</passability>
    <!--<castEdgeShadows>true</castEdgeShadows>-->
    <pathCost>60</pathCost>
    <fillPercent>0.8</fillPercent>
    <designationCategory>Security</designationCategory>
    <!--<staticSunShadowHeight>0.20</staticSunShadowHeight>-->
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-10)</interactionCellOffset>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>MrDummy</defName>
    <label>training dummy</label>
    <thingClass>Building_WorkTable</thingClass>
    <description>A straw dummy for training melee skill.</description>
    <uiIconPath>Things/Building/MrDummy_north</uiIconPath>
    <graphicData>
      <texPath>Things/Building/MrDummy</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <!--<costList>
      <Steel>15</Steel>
      <WoodLog>10</WoodLog>
    </costList>-->
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>35</costStuffCount>
    <!--<constructEffect>ConstructWood</constructEffect>-->
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <!--<castEdgeShadows>true</castEdgeShadows>-->
    <fillPercent>1</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>200</WorkToBuild>
      <MaxHitPoints>350</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Security</designationCategory>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <!--<surfaceType>Item</surfaceType>-->
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
  </ThingDef>

  <!--Borrowed from Jecrell's RimWriter-->
  <ThingDef ParentName="BuildingBase">
    <defName>BookShelf</defName>
    <label>Book Shelf</label>
    <thingClass>HumanResources.Building_BookStore</thingClass>
    <description>A sturdy shelf for storing knowledge in form of books.</description>
    <uiIconScale>0.45</uiIconScale>
    <!--<researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>-->
    <graphicData>
      <texPath>Things/Building/LibraryBookcase/Jecrell_Bookcase</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>3</drawSize>
    </graphicData>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <rotatable>true</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Mass>15</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
      <JoyGainFactor>1</JoyGainFactor>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>110</costStuffCount>
    <pathCost>70</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
    <designationHotKey>Misc2</designationHotKey>
    <comps>
      <li Class="HumanResources.CompProperties_StorageGraphic">
        <graphicEmpty>
          <texPath>Things/Building/LibraryBookcase/Jecrell_BookcaseEmpty</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <shaderType>CutoutComplex</shaderType>
          <drawSize>3</drawSize>
        </graphicEmpty>
        <graphicSparse>
          <texPath>Things/Building/LibraryBookcase/Jecrell_BookcaseSparse</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <shaderType>CutoutComplex</shaderType>
          <drawSize>3</drawSize>
        </graphicSparse>
        <graphicFull>
          <texPath>Things/Building/LibraryBookcase/Jecrell_Bookcase</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <shaderType>CutoutComplex</shaderType>
          <drawSize>3</drawSize>
        </graphicFull>
        <countSparseThreshhold>1</countSparseThreshhold>
        <countFullCapacity>30</countFullCapacity>
      </li>
    </comps>
    <building>
      <!--<joyKind>Jecrell_Books</joyKind>-->
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <preventDeteriorationInside>true</preventDeteriorationInside>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Knowledge</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>Knowledge</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
      <li>HumanResources.ITab_Inventory</li>
    </inspectorTabs>
  </ThingDef>

  <ThingDef ParentName="UnfinishedBase">
    <defName>UnfinishedTechBook</defName>
    <label>unfinished technical document</label>
    <statBases>
      <Flammability>1.2</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Item/unfinishedBook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <stuffCategories Inherit="false" />
  </ThingDef>

  <ThingDef>
    <thingClass>ThingWithComps</thingClass>
    <defName>TechBook</defName>
    <label>Technical Document</label>
    <description>A book filled with knowledge.</description>
    <category>Item</category>
    <selectable>true</selectable> 
    <graphicData>
      <texPath>Things/Item/book</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>0</costStuffCount>
    <stuffCategories/>
    <pathCost>10</pathCost>
    <useHitPoints>true</useHitPoints>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>1</Mass>
      <DeteriorationRate>2</DeteriorationRate>
      <Flammability>1.2</Flammability>
      <MarketValue>1000</MarketValue>
      <WorkToMake>1000</WorkToMake>
    </statBases>
    <comps>
      <li Class="HumanResources.CompProperties_TitleMaker"/>
    </comps>

    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>true</rotatable>
    <tickerType>Never</tickerType>
    <tradeability>Buyable</tradeability>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <menuHidden>true</menuHidden>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <stackLimit>1</stackLimit>
    <tradeNeverStack>true</tradeNeverStack>
    <forceDebugSpawnable>true</forceDebugSpawnable>
  </ThingDef>

